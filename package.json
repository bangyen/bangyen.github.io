{
    "name": "website",
    "homepage": "https://bangyen.github.io",
    "version": "0.1.0",
    "private": true,
    "packageManager": "bun@1.3.9",
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@fontsource/inter": "^5.2.8",
        "@mui/icons-material": "^7.3.7",
        "@mui/material": "^7.3.7",
        "gh-pages": "^6.3.0",
        "katex": "^0.16.28",
        "pako": "^2.0.4",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-router-dom": "^7.12.0",
        "recharts": "^3.2.1"
    },
    "scripts": {
        "start": "vite",
        "dev": "vite",
        "preview": "vite preview",
        "predeploy": "bun run build",
        "deploy": "gh-pages -b gh-pages -d build",
        "build": "vite build",
        "build:analyze": "bun run build && du -sh build/ && ls -lh build/assets/*.js | awk '{print $5, $9}'",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "type-check": "bun x tsc --noEmit",
        "lint": "eslint src/",
        "lint:fix": "eslint src/ --fix",
        "format": "prettier --write src/",
        "format:check": "prettier --check src/",
        "fix": "bun run lint:fix && bun run format",
        "lint:all": "bun run lint && bun run format:check",
        "ci": "bun run lint:all && bun run type-check && bun run test",
        "data:update": "bun scripts/updateResearchData.ts",
        "prepare": "husky"
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "endOfLine": "lf"
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": [
            "eslint --fix --max-warnings=0",
            "prettier --write"
        ],
        "src/**/*.{css,scss}": [
            "prettier --write"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "overrides": {
        "nth-check": "^2.1.1",
        "postcss": "^8.4.31",
        "@babel/core": "^7.22.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@types/katex": "^0.16.8",
        "@types/node": "^25.2.2",
        "@types/pako": "^2.0.4",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "@vitejs/plugin-react": "^5.1.2",
        "@vitest/coverage-v8": "^4.0.18",
        "cheerio": "^1.2.0",
        "eslint": "^9.39.2",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "eslint-plugin-unicorn": "^57.0.0",
        "globals": "^17.0.0",
        "husky": "^9.1.7",
        "jsdom": "^28.0.0",
        "lint-staged": "^16.1.6",
        "prettier": "^3.6.2",
        "rollup-plugin-visualizer": "^6.0.5",
        "terser": "^5.46.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.53.1",
        "vite": "^7.3.1",
        "vite-plugin-compression": "^0.5.1",
        "vite-plugin-pwa": "^1.2.0",
        "vite-tsconfig-paths": "^6.0.4",
        "vitest": "^4.0.18"
    }
}
